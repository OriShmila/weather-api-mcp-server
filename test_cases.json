{
  "test_cases": [
    {
      "name": "get_weather_basic",
      "tool": "get_weather",
      "arguments": {
        "query": "Paris",
        "days": 3
      },
      "description": "Get 3-day forecast for Paris",
      "expected_fields": ["location", "current", "forecast"],
      "should_succeed": true
    },
    {
      "name": "get_weather_with_features",
      "tool": "get_weather",
      "arguments": {
        "query": "Delhi",
        "days": 5,
        "include_air_quality": true,
        "include_alerts": true
      },
      "description": "Get weather with air quality and alerts",
      "expected_fields": ["location", "current", "forecast"],
      "should_succeed": true
    },
    {
      "name": "get_astronomy_winter_solstice",
      "tool": "get_astronomy_data",
      "arguments": {
        "query": "Reykjavik",
        "date": "last month"
      },
      "description": "Get astronomy data for last month",
      "expected_fields": ["location", "astronomy"],
      "should_succeed": true
    },
    {
      "name": "get_astronomy_yesterday",
      "tool": "get_astronomy_data",
      "arguments": {
        "query": "Tokyo",
        "date": "yesterday"
      },
      "description": "Get astronomy data for yesterday",
      "expected_fields": ["location", "astronomy"],
      "should_succeed": true
    },
    {
